{
  // ======= VSCode settings =============
  // editor
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,

  "editor.renderWhitespace": "all",
  "editor.suggestSelection": "first",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // Font settings
  "editor.fontFamily": "SourceHanCodeJP-Regular, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  "debug.console.fontSize": 16,
  "terminal.integrated.fontSize": 16,

  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "extensions.ignoreRecommendations": false,
  "window.zoomLevel": -1,

  // Languages
  "[shellscript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "files.eol": "\n"
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "python.pythonPath": "/usr/local/bin/python3",
  "python.formatting.provider": "yapf",

  "html.format.preserveNewLines": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "eslint.packageManager": "yarn",
  "stylelint.autoFixOnSave": true,
  "stylelint.configOverrides": {
    "ignoreFiles": ["node_modules/**/*.*"]
  },
  // ========= Extentions =============
  //VSNote
  "vsnotes.defaultNotePath": "/Users/syajima/develop/MyActivities/docs",
  "vsnotes.defaultNoteTitle": "{title}.{ext}",
  "vsnotes.listRecentLimit": 30,
  "vsnotes.templates": ["mydefault", "seminar", "book", "blog"],
  "vsnotes.defaultSnippet": {
    "langId": "markdown",
    "name": "vsnote_template_mydefault"
  },
  // Git
  "git.enableSmartCommit": true,

  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "markdown.preview.fontSize": 16,
  "path-intellisense.showHiddenFiles": true,
  "vsicons.dontShowNewVersionMessage": true
}
